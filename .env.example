# .env.local.example
# Copy this file as .env.local and replace the values with your actual Firebase project settings

VITE_FIREBASE_API_KEY="FAKE_API_KEY_123456"              # Firebase Console > Project Settings > General > Web API Key
VITE_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com" # Firebase Console > Project Settings > General > Auth Domain
VITE_FIREBASE_PROJECT_ID="your-project-id"               # Firebase Console > Project Settings > General > Project ID
VITE_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"  # Firebase Console > Project Settings > General > Storage Bucket
VITE_FIREBASE_MESSAGING_SENDER_ID="1234567890"           # Firebase Console > Project Settings > General > Messaging Sender ID
VITE_FIREBASE_APP_ID="1:1234567890:web:abc123def456"     # Firebase Console > Project Settings > General > App ID
VITE_FIREBASE_MEASUREMENT_ID="G-XXXXXXXXXX"              # Firebase Console > Project Settings > General > Measurement ID (optional)


# Configuration des sessions PIN Hatcast
VITE_PIN_SESSION_DURATION_CONNECTED_DAYS=7
VITE_PIN_SESSION_DURATION_ANONYMOUS_MINUTES=10

# Configuration des sessions utilisateur (confiance des appareils)
VITE_USER_SESSION_DURATION_MONTHS=6
