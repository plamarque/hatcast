rules_version = '2';

// Règles Firebase Storage
service firebase.storage {
  match /b/{bucket}/o {
    // Logos de saison : lecture publique, écriture pour utilisateurs connectés
    match /development/season-logos/{seasonId}/{fileName} {
      allow read: if true;  // Lecture publique des logos
      allow write: if request.auth != null;  // Écriture pour utilisateurs connectés
    }
    
    // Logos de saison staging : lecture publique, écriture pour utilisateurs connectés
    match /staging/season-logos/{seasonId}/{fileName} {
      allow read: if true;  // Lecture publique des logos
      allow write: if request.auth != null;  // Écriture pour utilisateurs connectés
    }
    
    // Logos de saison production : lecture publique, écriture pour utilisateurs connectés
    match /production/season-logos/{seasonId}/{fileName} {
      allow read: if true;  // Lecture publique des logos
      allow write: if request.auth != null;  // Écriture pour utilisateurs connectés
    }
    
    // Par défaut : tout bloqué
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
